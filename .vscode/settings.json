// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "cstdlib": "c",
        "xlocale": "c"
    },
    "C_Cpp.errorSquiggles": "Disabled",
    "workbench.colorCustomizations": {
        "activityBar.background": "#4b4b4b",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#081808",
        "activityBarBadge.foreground": "#e7e7e7",
        "titleBar.activeBackground": "#323232",
        "titleBar.inactiveBackground": "#32323299",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveForeground": "#e7e7e799",
        "statusBar.background": "#323232",
        "statusBarItem.hoverBackground": "#4b4b4b",
        "statusBar.foreground": "#e7e7e7"
    },
    "peacock.color": "#323232"
}
